<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bayangan -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4D000000"/> <!-- Warna bayangan semi-transparent -->
            <size
                android:width="69dp"
                android:height="69dp"/> <!-- Sedikit lebih besar dari lingkaran utama -->
        </shape>
    </item>

    <!-- Lingkaran Utama -->
    <item android:top="0dp" android:bottom="2dp" android:left="0dp" android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/black"/>
            <size
                android:width="59dp"
                android:height="59dp"/>
        </shape>
    </item>
</layer-list>
