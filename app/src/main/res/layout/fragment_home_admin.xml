<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".FragmentHomeAdmin">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/selamatdatangadmin"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:text="Halo Admin!"
        android:fontFamily="@font/font1"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/welcomeadmin"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:text="Selamat Datang Dihalaman Admin"
        android:fontFamily="@font/font2m"
        android:textColor="@color/abu"
        android:textSize="16dp"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:contentDescription="@menu/dropdown_menu"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/profile" />

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="111dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">
        
        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/jumlahuserpick"/>

        <LinearLayout
            android:layout_width="73dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="95dp">
            
            <TextView
                android:id="@+id/totalUuser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="4"
                android:fontFamily="@font/font3semibold"
                android:textSize="24dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font2m"
                android:text="Total User"
                android:textColor="@color/abu"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="111dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="210dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/gambartotalparkiran"/>

        <LinearLayout
            android:layout_width="73dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="95dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="3"
                android:fontFamily="@font/font3semibold"
                android:textSize="24dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font2m"
                android:text="Total Parkiran"
                android:textColor="@color/abu"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>